<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>{{#if data.name}}{{data.name}} – {{/if}}CV</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <style>{{{css}}}</style>
  <style>:root { --primary: {{primaryColor}}; }</style>
</head>
<body class="classic">
  <header class="classic-header">
    <div class="title-line">
      <h1 class="name">{{data.name}}</h1>
      {{#if data.title}}
        <span class="sep">•</span>
        <div class="subtitle">{{data.title}}</div>
      {{/if}}
    </div>
    <div class="meta">
      {{#if data.email}}<span><a href="mailto:{{data.email}}">{{data.email}}</a></span>{{/if}}
      {{#if data.phone}}<span>• <a href="tel:{{unquote data.phone}}">{{unquote data.phone}}</a></span>{{/if}}
      {{#if data.website}}<span>• <a href="{{data.websiteHref}}" target="_blank" rel="noopener noreferrer">{{data.website}}</a></span>{{/if}}
      {{#if data.linkedin}}<span>• <a href="{{data.linkedinHref}}" target="_blank" rel="noopener noreferrer">{{data.linkedin}}</a></span>{{/if}}
      {{#if data.github}}<span>• <a href="{{data.githubHref}}" target="_blank" rel="noopener noreferrer">{{data.github}}</a></span>{{/if}}
      {{#if data.location}}<span>• {{data.location}}</span>{{/if}}
    </div>
  </header>

  <main class="classic-main">
    {{#if data.summary}}
    <section>
      <h2>Summary</h2>
      <p>{{data.summary}}</p>
    </section>
    {{/if}}

    {{#if data.experience.length}}
    <section>
      <h2>Experience</h2>
      {{#each data.experience}}
      <article class="item">
        <div class="row">
          <strong>{{this.role}}</strong>{{#if this.company}} — {{this.company}}{{/if}}
        </div>
        <div class="row meta">{{daterange this.start this.end}}{{#if this.location}} • {{this.location}}{{/if}}</div>
        {{#if this.summary}}<p>{{this.summary}}</p>{{/if}}
        {{#if this.highlights.length}}
        <ul>
          {{#each this.highlights}}<li>{{this}}</li>{{/each}}
        </ul>
        {{/if}}
      </article>
      {{/each}}
    </section>
    {{/if}}

    {{#if data.education.length}}
    <section>
      <h2>Education</h2>
      {{#each data.education}}
      <div class="row">
        <strong>{{this.degree}}</strong>{{#if this.school}} — {{this.school}}{{/if}}
        <span class="meta"> ({{daterange this.start this.end}})</span>
      </div>
      {{/each}}
    </section>
    {{/if}}
    
    {{#if data.skills.length}}
    <section>
      <h2>Skills</h2>
      <p>{{join data.skills ", "}}</p>
    </section>
    {{/if}}

    {{#if data.projects.length}}
    <section class="projects-section">
      <h2>Projects</h2>
      {{#each data.projects}}
      <article class="item">
        <div class="row">
          <strong>{{this.name}}</strong>
          {{#if this.link}}
            — 
            {{#if this.linkHref}}
              <a href="{{this.linkHref}}" target="_blank" rel="noopener noreferrer">{{this.link}}</a>
            {{else}}
              {{this.link}}
            {{/if}}
          {{/if}}
        </div>
        {{#if this.summary}}<p>{{this.summary}}</p>{{/if}}
        {{#if this.highlights.length}}
        <ul>{{#each this.highlights}}<li>{{this}}</li>{{/each}}</ul>
        {{/if}}
      </article>
      {{/each}}
    </section>
    {{/if}}

    {{#if data.languages.length}}
    <section>
      <h2>Languages</h2>
      <p>{{join data.languages ", "}}</p>
    </section>
    {{/if}}

    {{#if data.presentations.length}}
    <section>
      <h2>Presentations</h2>
      <ul>
        {{#each data.presentations}}
          {{#if this.title}}
            <li>{{this.title}}{{#if this.years}} ({{this.years}}){{/if}}</li>
          {{else}}
            <li>{{this}}</li>
          {{/if}}
        {{/each}}
      </ul>
    </section>
    {{/if}}

    {{#if data.publications.length}}
    <section>
      <h2>Publications</h2>
      <ul>
        {{#each data.publications}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </section>
    {{/if}}

    {{#if contentHtml}}
    <section class="markdown">
      {{{safe contentHtml}}}
    </section>
    {{/if}}
  </main>
</body>
</html>